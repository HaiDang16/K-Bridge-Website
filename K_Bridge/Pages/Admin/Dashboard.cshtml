@page
@model K_Bridge.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Trang chủ";
}
<div class="row dashboard-welcome-text mx-5 mt-5">
    Xin chào, admin1
</div>
<div class="row mx-5 h-25 w-100 mt-5">
    <div class="col-4 ">
        <div class="dashboard-card pt-2 px-4">
            <div class="row align-items-center">
                <div class="col-6 dashboard-card-title d-flex justify-content-start">
                    Chủ đề
                </div>
                <div class="col-3"></div>
                <img src="/img/icon_table_50_dark.png"
                     class="col-3 d-flex justify-content-end px-4 h-25" alt="Chủ đề">
            </div>
            <div class="row d-flex justify-content-center dashboard-card-number">
                @Model.TotalTopics
            </div>
            <div class="row d-flex justify-content-end dashboard-card-plus-number">
                +@Model.RecentTopics
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="dashboard-card pt-2 px-4">
            <div class="row align-items-center">
                <div class="col-6 dashboard-card-title d-flex justify-content-start">
                    Bài viết
                </div>
                <div class="col-3"></div>
                <img src="/img/icon_fire_50_dark.png"
                     class="col-3 d-flex justify-content-end px-4  h-25" alt="Bài viết">
            </div>
            <div class="row d-flex justify-content-center dashboard-card-number">
                @Model.TotalPosts
            </div>
            <div class="row d-flex justify-content-end dashboard-card-plus-number">
                +@Model.RecentPosts
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="dashboard-card pt-2 px-4">
            <div class="row align-items-center">
                <div class="col-6 dashboard-card-title d-flex justify-content-start">
                    Tài khoản
                </div>
                <div class="col-3"></div>
                <img src="/img/icon_user_50_dark.png"
                     class="col-3 d-flex justify-content-end px-3  h-25" alt="Tài khoản">
            </div>
            <div class="row d-flex justify-content-center dashboard-card-number">
                @Model.TotalUsers
            </div>
            <div class="row d-flex justify-content-end dashboard-card-plus-number">
                +@Model.RecentUsers
            </div>
        </div>
    </div>
</div>
