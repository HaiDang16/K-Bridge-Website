<nav>
    <h5 class="text-color-logo mt-4">Diễn đàn đáng chú ý</h5>
    @foreach (var category in ViewBag.Categories ?? Enumerable.Empty<Category>())
    {
        <div class="container">
            <div class="row align-items-center cursor">
                <div class="col-auto p-0 my-2">
                    <img class="p-0 m-0 w-32 h-auto mt-2 img-fluid" src="~/img/@Url.Content(category.LinkIcon)" alt="@category.LinkIcon" />
                </div>
                <div class="col">
                    <div class="row text-wrap m-0 d-none d-sm-block">
                        <p class="p-0 m-0 text-color-logo fs-6">@category.Name</p>
                    </div>
                    <div class="row text-wrap m-0 d-none d-sm-block">
                        <p class="p-0 m-0 text-color-logo fs-6">@category.TopicCount</p>
                    </div>
                </div>
            </div>
        </div>
    }
</nav>
