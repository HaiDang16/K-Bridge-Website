<!DOCTYPE html>
<html lang="en">
<head>
    <link href="/css/Style.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM3eFlY6PvbtZ6mH5pqC/NfCUGoBdZ6M6BfwYFZ" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var headers = document.querySelectorAll('.collapsible-header');

            headers.forEach(function (header) {
                header.addEventListener('click', function () {
                    var target = document.getElementById(this.dataset.target);
                    this.classList.toggle('active');

                    if (target.style.maxHeight) {
                        target.style.maxHeight = null;
                    } else {
                        target.style.maxHeight = target.scrollHeight + "px";
                    }
                });
            });
        });
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>K-Bridge | @ViewData["Title"]</title>
</head>
<body>
    <header class="bg-main-color-header">
        <vc:layout-header />
    </header>
    <div class="container-fluid">
        <div class="row main-content mt-4 mx-3">
            <div class="col-lg-3 col-md-4 sidebar mb-4 d-none d-md-block">
                <vc:layout-forum-list />
                <vc:layout-stat-list />
            </div>
            <div class="col-lg-6 col-md-8 col-12 content mb-4 ">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="col-lg-3 col-md-12 sidebar d-none d-lg-block">
                <div class="d-flex flex-column align-items-center">
                    <div style="width: 100%; max-width: 300px;">
                        <vc:layout-new-post />
                        <vc:layout-box-chat />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

