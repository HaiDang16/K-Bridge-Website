<!DOCTYPE html>
<html lang="en">
<head>
    <link href="/css/Style.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/Admin.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMRElTAs8XIb7l+MZ5BocOfdd+AdQd5Yj5wpHRI" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header class="header bg-main-color-header">
        @await Html.PartialAsync("LayoutHeader")
    </header>
    <div class="container-fluid">
        <div class="row main-content mt-4 mx-3">
            <div class="col-lg-3 col-md-4 sidebar mb-4 d-none d-md-block">
                @await Html.PartialAsync("LayoutCategory")
                @await Html.PartialAsync("LayoutStats")
            </div>
            <div class="col-lg-6 col-md-8 col-12 content mb-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="col-lg-3 col-md-12 sidebar d-none d-lg-block">
                <div class="d-flex flex-column align-items-center">
                    <div style="width: 100%; max-width: 300px;">
                        @await Html.PartialAsync("LayoutPost")
                        @await Html.PartialAsync("LayoutBoxChat")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
