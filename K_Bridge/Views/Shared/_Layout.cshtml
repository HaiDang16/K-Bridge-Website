<!DOCTYPE html>
<html lang="en">
<head>
    <link href="/css/Style.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOM3eFlY6PvbtZ6mH5pqC/NfCUGoBdZ6M6BfwYFZ" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>K-Bridge | @ViewData["Title"]</title>
</head>
<body>
    <header class="header bg-main-color-header">
        @await Html.PartialAsync("LayoutHeader")
    </header>
    <div class="container-fluid">
        <div class="row main-content mt-4 mx-3">
            <div class="col-lg-3 col-md-4 sidebar mb-4 d-none d-md-block">
                <vc:layout-category-list />
                <vc:layout-stat-list />
            </div>
            <div class="col-lg-6 col-md-8 col-12 content mb-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="col-lg-3 col-md-12 sidebar d-none d-lg-block">
                <div class="d-flex flex-column align-items-center">
                    <div style="width: 100%; max-width: 300px;">
                        <div style="max-width: 300px;" class="mt-2 justify-content-end">
                            <button type="button" class="btn btn-post text-uppercase fs-6 w-100"
                                    data-bs-toggle="modal"
                                    data-bs-target="#newPostModal">
                                Đăng chủ đề mới
                            </button>
                        </div>
                        <vc:layout-box-chat />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal new post -->
    <div class="modal fade modal-new-post-overall" id="newPostModal" tabindex="-1"
         aria-labelledby="newPostModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-new-post-header py-2 px-3">
                    <h5 class="modal-title " id="newPostModalLabel">ĐĂNG CHỦ ĐỀ TRONG</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-new-post-body"> 
                    <div class="modal-new-post-card">
                        <div class="modal-new-post-card-title py-2 px-3">TÀI LIỆU TỔNG HỢP</div>
                        <div class="modal-new-post-card-title py-2 px-3">TÀI LIỆU TỔNG HỢP</div>
                        <div class="modal-new-post-card-title py-2 px-3">TÀI LIỆU TỔNG HỢP</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

